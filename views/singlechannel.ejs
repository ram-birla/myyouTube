   <div class="container">
       <% if(user) { %>
        <form method="POST" action="/change-profile-picture" enctype="multipart/form-data" id="form-change-profile-picture">
            <input type="file" id="input-file-change-profile-picture" style="display: none;" accept="image/*" name="image" required onchange = "document.getElementById('form-change-profile-picture').submit()">

        </form>
        <form method="POST" action="/change-cover-picture" enctype="multipart/form-data" id="form-change-cover-picture">
            <input type="file" id="input-file-change-cover-picture" style="display: none;" accept="image/*" name="image" required onchange = "document.getElementById('form-change-cover-picture').submit()">

        </form>

        <% } %>

        <div class="container-fluid">
            <div class="row">
                <img src="https://gateway.ipfs.io/ipfs/<%= user.coverPhoto %>" style="cursor: pointer;" class="img-fluid cover-photo" onerror="this.src = 'http://placehold.it/1900x700'" onclick="document.getElementById('input-file-change-cover-picture').click();">

            </div>
            <div class="container my-4">
              <div class="row">
                <div class="col-md-4">
                  <img src="https://gateway.ipfs.io/ipfs/<%= user.image %>" class="img-fluid-profile-photo" height="150px" width="150px" style="cursor: pointer; border-radius: 50%;" onerror="this.src = 'http://placehold.it/150x150'" onclick="document.getElementById('input-file-change-profile-picture').click();">

                </div>
                <div class="col-md-8">
                  <h3><b><%= user.name %></b></h3>
                  <p><%= user.subscription.length %> Subscribers</p>
                  
                </div>
              </div>
<hr/>
              <form method="POST" action="/create-playlist">
                  <div class="form-group">
                    <label>Playlist Title</label>
                    <input type="text" name="title" class="form-control" required>
                  </div>
                  <input type="submit" class="btn btn-primary" value="Add Playlist">
              </form>
              <hr/>
              <h3>My Playlists</h3>
              <div class="row">
                <%
                  user.playlists = user.playlists.reverse();
                  user.playlists.forEach(function (playlist) {
                %>
                <div class="col-md-4">
                  <div class="card h-100">
                    <div class="card-body">
                      <h3><%= playlist.title %></h3>
                    </div>
                    <div class="card-footer">
                      <% if (playlist.videos.length > 0) {%>
                        <a href="/playlist/<%= playlist._id %>/<%= playlist.videos[0]._id %>" class="btn btn-warning">View</a>  

                      <% } else { %>
                        <span>Playlist is empty</span>  
                      <% } %>
                      <form method="POST" action="/delete-playlist" onsubmit="return confirm('Are you sure want to delete this playlist ?');" style="display: contents;">
                        <input type="hidden" name="_id" value="<%= playlist._id %>">
                        <button type="submit" class="btn btn-danger">Delete</button>

                      </form>
                    </div>
                  </div>
                </div>
                <% }) %>
              </div>
              <hr/>
              <h2>My Videos</h2>
                <% user.videos = user.videos.reverse();
                user.videos.forEach(function (video) { %>
                  <div class="row">
                    <div class="col-2" >
                      <img src="https://gateway.ipfs.io/ipfs/<%= video.thumbnail %>" alt="Loading..." height="125px" width="200px" style="width:100%;">
                    </div>
                    <div class="col-6" >
                      <h4><b><%= video.title %></b></h4>
                      <h6><b>Category : </b><%= video.category %> </h6>
                      <%= video.views %> views
                      </p>
                    </div>
                    <div class="col-4">
                      <a href="/watch/<%= video._id %>" class="btn btn-outline-warning">View</a> 
                      &nbsp;&nbsp;
                      <a href="/edit/<%= video._id %>" class="btn btn-outline-primary">Edit</a><br/>
                      <br/>
                      <form method="POST" action="/delete-video" onsubmit="return confirm('Are you sure want to delete this video?');" style="display: contents;">
                          <input type="hidden" name="_id" value="<%= video._id %>">
                          <button type="submit" class="btn btn-danger">Delete</button>
                      </form>
                    </div>
                  </div>
                  <hr/>
                     
                <% }) %>
              
                  
            </div>
        

</div>
